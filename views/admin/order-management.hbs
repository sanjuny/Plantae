<div class="content">


    <div class="page-content-wrapper ">

        <div class="container-fluid">
            <div class="row">
                <div class="col-12 mt-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="row" style="justify-content:space-between ;">
                                <h4 class="mt-0 header-title">Order Management</h4>

                            </div>

                            <table id="datatable-buttons"
                                class="table table-striped table-bordered dt-responsive nowrap"
                                style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        {{!-- <th>Order Name</th> --}}
                                
                                        <th>Date & Address</th>
                                        {{!-- <th>Pincode</th> --}}
                                        <th>Contact</th>
                                        <th>Total Price</th>
                                        <th>Payment</th>
                                        <th>Status</th>
                                        <th>Status</th>

                                        <th style="text-align:center ;">Action</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each orders}}
                                    <tr>
                        
                                        <td>{{@index}}</td>
                                        {{!-- <td>{{this.deliveryDetails.FirstName}}</td> --}}
                                        <td>{{this.date}}<br>
                                            {{this.deliveryDetails.Address}}<br>
                                            {{this.deliveryDetails.Postcode}}</td>
                                        <td>{{this.deliveryDetails.Mobile}}<br>
                                            {{this.deliveryDetails.EmailAddress}}</td>

                                        <td>â‚¹{{this.TotalAmount}}</td>
                                        <td>{{this.paymentMethod}}</td>
                                        <td>{{this.status}}</td>
                                        {{#if this.Cancelled}}
                                        <td></td>
                                        {{else}}
                                        <td>
                                            <select id="statusValue" name="status"
                                                onchange="statusUpdate(value,'{{this._id}}')">
                                                <option value="Shipped">Shipped</option>
                                                <option value="Cancelled">Cancelled</option>
                                                <option value="Delivered">Delivered</option>
                                                <option value="Pending">Pending</option>
                                            </select>
                                        </td>
                                        {{/if}}
                                        <td>
                                            <a href=""
                                                class="btn btn-outline-info btn-round waves-effect waves-light"><i
                                                    class="mdi mdi-send mr-2"></i>Details</a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->

        </div><!-- container -->

    </div> <!-- Page content Wrapper -->
</div> <!-- content -->

<script type="text/javascript">
    var select = document.getElementById('statusvalue');
    var value = select.options[select.selectedIndex].value;
    console.log(value)
</script>

<script>
    function statusUpdate(val, orderId) {
        console.log(val)
        console.log(orderId)
        $.ajax({
            url: '/admin/updateOrderStatus',
            data: {
                status: val,
                id: orderId,
            },
            method: 'post',
            success: (response) => {
                if (response.status) {
                    alert("Status Changed")
                    location.reload()
                } else {
                    console.log('oops');
                }
            }
        })
    }
</script>